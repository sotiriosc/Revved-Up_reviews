
<div class="bg-white w-[80%] max-[426px]:w-[100%] max-[426px]:shadow-none self-center shadow-lg rounded-lg px-6 py-4">
  <div class="text-4xl font-semibold">
    <h2>Welcome, {{username}}!</h2>


<div class="row mt-4">

  <div class="border border-dashed my-4"></div>
  
  <div class="">
    <div class="flex flex-col gap-4">
      <h3 class="text-2xl">Create a new car review:</h3>

      <form class="form new-carReview-form flex flex-col gap-4">
        <div class="form-group flex flex-row max-[426px]:flex-col max-[426px]:gap-4 gap-8 w-full self-center">
          <input
            class="form-input text-[1.2rem] bg-[#f5f3f3] rounded-lg p-1 px-2 w-full"
            type="text"
            id="carReview-title"
            name="carReview-title"
            placeholder="Car Review Title"
          />
          <select
            class="form-input text-[1.2rem] cursor-pointer bg-[#f5f3f3] rounded-lg p-1 px-2 w-full"
        
          type="text"
          id="make"
          name="carReview-make"
          placeholder="Car Make"
          />
            {{#each makes}}
              <option value="{{this}}">{{capitalize this}}</option>
            {{/each}}
          </select>
          <select
            class="form-input text-[1.2rem] bg-[#f5f3f3] cursor-pointer rounded-lg p-1 px-2 w-full"
        
          type="text"
          id="model"
          name="carReview-model"
          placeholder="Car model"
          />
          {{#each cars}}
            <option value="{{this.model}}" data-make="{{this.make}}">{{capitalize this.model}}</option>
          {{/each}}
          </select>
        </div>

        <div class="form-group flex grow">
          <textarea
            class="form-input text-[1.2rem] bg-[#f5f3f3] rounded-lg p-1 px-2 w-full"
            id="carReview-desc"
            name="carReview-desc"
            placeholder="Please review your vehicle here, share what you like, what you didnt and your personal experiences!"
            rows="10"
          ></textarea>
        </div>
        <div class="form-group flex flex-row justify-center">
          <button
            type="submit"
            class="bg-gray-600 text-white text-[1.2rem] px-10 rounded-xl p-2 hover:bg-green-400 btn btn-primary"
          >Create</button>
        </div>
      </form>
    </div>

    {{#if carReviews.length}}
  <div class="border border-dashed my-4"></div>

      <div class="flex flex-col gap-4 carReview-list">
        <h3 class="text-2xl">Current Car Reviews:</h3>

        {{#each carReviews as |carReview|}}
          <div class="flex flex-row max-[426px]:flex-col max-[426px]:text-ellipsis max-[426px]:gap-4 max-[426px]:items-center justify-between px-10 rounded-lg bg-[#f5f3f3] py-4">
            <div class="">
              <p><a class="text-[1.7rem] max-[426px]:text-[1.3rem]"
                  href="/carReview/{{carReview.id}}"
                >{{carReview.title}}</a></p>
            </div>
            <div class="">
              <button
                class="btn bg-green-500 text-[1.2rem] hover:bg-green-700 px-4 py-1 rounded-lg text-white editbtn"
                edit-id="{{carReview.id}}"
              >EDIT</button>
              <button
                class="btn btn-danger text-[1.2rem] bg-red-500  hover:bg-red-700 px-4 py-1 rounded-lg text-white"
                data-id="{{carReview.id}}"
              >DELETE</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
